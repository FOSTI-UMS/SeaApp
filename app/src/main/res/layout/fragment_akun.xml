<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.akun.AkunFragment">
    <ScrollView
        android:background="#F4F4F4"
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:background="#F4F4F4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="20dp"
                android:layout_width="match_parent"
                android:background="#F4F4F4"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageView"

                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:padding="10dp"
                    android:scaleType="centerCrop"
                    app:civ_border_color="#673AB7"
                    app:civ_border_width="5dp"
                    android:src="@drawable/akun_icon"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/textViewAkunUsername"
                android:layout_width="match_parent"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:layout_height="wrap_content"
                android:text="Username" />

            <LinearLayout
                android:paddingTop="20dp"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    style="@style/viewParent.headerText.settingsMiniTitle"
                    android:text="Pengaturan" />

                <TextView
                    android:id="@+id/akun_ubahfoto"
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Ubah Foto Profile" />

                <TextView
                    android:id="@+id/akun_ubahfoto1"
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Ubah Foto Profile" />

                <TextView
                    android:id="@+id/akun_ubahfoto2"
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Ubah Foto Profile" />
                <TextView
                    android:id="@+id/akun_pusat_penjual"
                    style="@style/viewParent.headerText.settingsTextIcon"
                    android:drawableLeft="@drawable/ic_notifications_black_24dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:text="Pusat Penjual" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>